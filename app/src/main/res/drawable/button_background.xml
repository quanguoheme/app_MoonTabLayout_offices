<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="@color/gray" android:endColor="@color/gray" android:angle="0.0" />
            <stroke android:width="1.0dip" android:color="#b0000000" />
            <corners android:radius="5.0dip" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="@color/blue" android:endColor="@color/blue" android:angle="270.0" />
            <stroke android:width="1.0dip" android:color="#00000000" />
            <corners android:radius="5.0dip" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="@color/blue" android:endColor="@color/blue" android:angle="90.0" />
            <stroke android:width="1.0dip" android:color="#00000000" />
            <corners android:radius="5.0dip" />
        </shape>
    </item>
</selector>